{
    "watch": [
        "src"
    ],
    "ext": "ts,json",
    "ignore": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "dist"
    ],
    "exec": "node -r ts-node/register -r tsconfig-paths/register ./src/index.ts",
    "env": {
        "NODE_ENV": "development",
        "TS_NODE_COMPILER_OPTIONS": "{\"experimentalDecorators\":true,\"emitDecoratorMetadata\":true}"
    }
}